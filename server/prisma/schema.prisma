generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   String @id @default(uuid())
  email String
  passwordHash String
  createdAt DateTime @default(now())

  categories   Category[]
}


model Category {
  id String @id @default(uuid())
  name String
  userId String
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@unique([userId,name])
}